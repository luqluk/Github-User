<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v1"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/image_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/text_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v3" />


    <View
        android:id="@+id/v2"
        android:layout_width="150dp"
        android:layout_height="12dp"
        android:layout_marginTop="@dimen/activityPadding"
        android:background="@drawable/text_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/v1"
        app:layout_constraintStart_toStartOf="@+id/v1"
        app:layout_constraintTop_toBottomOf="@+id/v1" />

    <View
        android:id="@+id/v3"
        android:layout_width="100dp"
        android:layout_height="@dimen/padding_10"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/v2"
        app:layout_constraintStart_toStartOf="@+id/v2"
        app:layout_constraintTop_toBottomOf="@+id/v2" />


</androidx.constraintlayout.widget.ConstraintLayout>
